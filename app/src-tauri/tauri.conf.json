{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skill Builder",
  "version": "0.1.0",
  "identifier": "com.skillbuilder.app",
  "build": {
    "beforeDevCommand": "npm run dev:frontend",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Skill Builder",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../prompts/*",
      "../sidecar/dist/agent-runner.js",
      "../sidecar/dist/sdk/cli.js",
      "../sidecar/dist/sdk/manifest.json",
      "../sidecar/dist/sdk/*.wasm",
      "../sidecar/dist/sdk/vendor/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
